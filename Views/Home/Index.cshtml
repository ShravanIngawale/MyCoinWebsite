@{
    ViewData["Title"] = "Welcome to My Coin";
}

<div class="container py-5">
    <div class="row align-items-center">
        <div class="col-lg-6 text-center text-lg-start">
            <h1 class="display-4 fw-bold">Welcome to <span class="text-primary">My Coin</span></h1>
            <p class="lead mt-3">
                Take control of your expenses with ease. My Coin is your personal financial tracker, helping you manage
                categories, monitor transactions, and gain insights into your spending habits.
            </p>
            <div class="mt-4">
                <a href="/Identity/Account/Login" class="btn btn-primary btn-lg me-2">Login</a>
                <a href="/Identity/Account/Register" class="btn btn-outline-primary btn-lg">Register</a>
            </div>
        </div>
        <div class="col-lg-6 text-center mt-4 mt-lg-0">
            <img src="~/Dashboard.png" alt="Dashboard" class="img-fluid rounded shadow">
        </div>
    </div>

    <section class="mb-5">
        <div class="row align-items-center feature-block mb-5">
            <div class="col-lg-6 text-center mt-4 mt-lg-0">
                <img src="~/Category Page.png" alt="Category" class="img-fluid rounded shadow">
            </div>
            <div class="col-md-6">
                <h2>Organize Your Spending with Categories</h2>
                <p>Create and manage spending categories tailored to your lifestyle. Group your expenses to understand where your money goes.</p>
            </div>
        </div>

        <div class="row align-items-center feature-block flex-md-row-reverse mb-5">
            <div class="col-lg-6 text-center mt-4 mt-lg-0">
                <img src="~/Category Add Page.png" alt="Category Add" class="img-fluid rounded shadow">
            </div>
            <div class="col-md-6">
                <h2>Add Categories with Ease</h2>
                <p>Quickly add new categories with our user-friendly form. Assign icons, choose types, and keep your records clean and organized.</p>
            </div>
        </div>

        <div class="row align-items-center feature-block mb-5">
            <div class="col-lg-6 text-center mt-4 mt-lg-0">
                <img src="~/Transaction Page.png" alt="Transaction" class="img-fluid rounded shadow">
            </div>
            <div class="col-md-6">
                <h2>Track Every Transaction</h2>
                <p>Effortlessly view all your income and expenses. Sort, filter, and stay updated with your day-to-day finances.</p>
            </div>
        </div>

        <div class="row align-items-center feature-block flex-md-row-reverse mb-5">
            <div class="col-lg-6 text-center mt-4 mt-lg-0">
                <img src="~/Transaction Add Page.png" alt="Transction Add" class="img-fluid rounded shadow">
            </div>
            <div class="col-md-6">
                <h2>Log Your Transactions</h2>
                <p>Use the transaction form to record your income and expenses with descriptions, amounts, and dates in just seconds.</p>
            </div>
        </div>
    </section>

    <section class="text-center mb-5">
        <h2 class="mb-3">Why Choose <strong>My Coin</strong>?</h2>
        <p class="lead">Built for simplicity, powered by data. My Coin brings together smart tools and an intuitive design to help you stay in control of your finances. Whether you're budgeting daily or planning ahead, My Coin is your financial companion.</p>
    </section>

    <section class="text-center mt-5 py-4 border-top">
        <h4>Ready to manage your money smarter?</h4>
        <a href="/Identity/Account/Register" class="btn btn-primary btn-lg mt-3">Get Started for Free</a>
    </section>
</div>
